<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder><!-- encoder 默认配置为PatternLayoutEncoder -->
			<pattern>%d %5p [%t] %c.%M:%L - %m%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
